pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'ishaq-gitlab', url: 'https://gitlab.com/devops2771812/repo_push_test.git'
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building...'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Building...'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Building...'
                script {
                    echo 'pushing...'
                    gitPushToGitHub()
                }
            }
        }
    }
}

def gitPushToGitHub() {
    withCredentials([usernamePassword(credentialsId: 'ishaq-github', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
        sh "git config --global user.email 'ishaqbuic@gmail.com'"
        sh "git config --global user.name 'ishaq'"
        sh "git add ."
        sh "git commit -m 'updated commit from gitlab to github'"
        sh "git push https://$USERNAME:$PASSWORD@github.com/ishaqbuic/test_repo.git main"
    }
}
